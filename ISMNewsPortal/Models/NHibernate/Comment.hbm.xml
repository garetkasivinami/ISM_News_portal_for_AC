<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" auto-import="true" assembly="ISMNewsPortal" namespace="ISMNewsPortal.Models">
  <class name="Comment" dynamic-update="true" >
    <cache usage="read-write"/>
    <id name="Id" type="int">
      <generator class="identity" />
    </id>
    <property name="Date"  
              type="datetime"
              not-null="true"/>
    <property name="IsEdited"  
              type="boolean"
              not-null="true"/>
    <property name="Text"  
              type="string"
              length="1000"
              not-null="true"/>
  </class>
</hibernate-mapping>