<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" auto-import="true" assembly="ISMNewsPortal" namespace="ISMNewsPortal.Models">
  <class name="Admin" dynamic-update="true" >
    <cache usage="read-write"/>
    <id name="Id" type="int">
      <generator class="identity" />
    </id>
    <property name="AccessLevel"
              type="byte"
              not-null="true"/>
    <bag name="NewsPosts" 
         inverse="true">
      <key column="AuthorId"/>
      <one-to-many class="NewsPost"/>
    </bag>
    <property name="UserId"
              type ="int"
              not-null="false"/>
  </class>
</hibernate-mapping>