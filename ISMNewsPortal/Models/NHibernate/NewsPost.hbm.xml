<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" auto-import="true" assembly="ISMNewsPortal" namespace="ISMNewsPortal.Models">
  <class name="NewsPost" dynamic-update="true" >
    <cache usage="read-write"/>
    <id name="Id" type="int">
      <generator class="identity" />
    </id>
    <property name="Name" 
              type="string"
              length="128"
              not-null="true"/>
    <property name="Description"  
              type="string"
              length="10000"
              not-null="true"/>
    <property name="CreatedDate"  
              type="datetime"
              not-null="true"/>
    <property name="EditDate"  
              type="datetime"
              not-null="false"/>
    <property name="ImagePath"  
              type="string"
              length="256"
              not-null="true"/>
    <property name="AuthorId"
              type="int"
              not-null="true"/>
    <property name="IsVisible"
              type="boolean"
              not-null="true" />
    <property name="PublicationDate"
              type="datetime"
              not-null="true"/>
  </class>
</hibernate-mapping>