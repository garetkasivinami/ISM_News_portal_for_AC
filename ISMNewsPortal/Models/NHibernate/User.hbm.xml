<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" auto-import="true" assembly="ISMNewsPortal" namespace="ISMNewsPortal.Models">
  <class name="Users" dynamic-update="true" >
    <cache usage="read-write"/>
    <id name="Id" type="int">
      <generator class="identity" />
    </id>
    <property name="Login" 
              type="string" 
              length="128"
              not-null="true"/>
    <property name="Password" 
              type="string" 
              length="128"
              not-null="true"/>
    <property name="Salt"
              type="string"
              length="128"
              not-null="true"/>
    <property name="UserName" 
              type="string" 
              length="64"
              not-null="true"/>
    <property name="IsActivated" 
              type ="boolean"
              not-null="true"/>
    <property name="Phone" 
              type ="int"
              not-null="false"/>
    <property name="PhoneCountry" 
              type="short"
              not-null="false"/>
    <property name="About" 
              type="string" 
              length="1024"
              not-null="false"/>
    <property name="RegistrationDate" 
              type="datetime"
              not-null="true"/>
    <property name="CommentsCount" 
              type="int"
              not-null="true"/>
    <property name="LikesCount"
              type="int"
              not-null="true"/>
    <property name="IsBanned" 
              type="boolean"
              not-null="true"/>
    <property name="AvatarPath" 
              type="string" 
              length="256"
              not-null="false"/>
    <property name="HideLogin" 
              type="boolean"
              not-null="true"/>
    <property name="HidePhone"
              type="boolean"
              not-null="true"/>
    <property name="HideCommentsCount"
              type="boolean"
              not-null="true"/>
    <property name="HideRegistrationDate" 
              type="boolean"
              not-null="true"/>
  </class>
</hibernate-mapping>