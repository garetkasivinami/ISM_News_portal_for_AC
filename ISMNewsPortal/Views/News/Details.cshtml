@model ISMNewsPortal.Models.NewsPostViewModel
@{
    ViewBag.Title = Model.NewsPost.Name;
}

<div class="card">
    <div class="card-body">
        <h5 class="card-title">@Model.NewsPost.Name</h5>
        <img src="@Model.ImagePath" class="post-img" alt="Post image">
        <p class="card-text">@Html.Raw(Html.Encode(Model.NewsPost.Description).Replace("\n", "<br />"))</p>
        <p class="card-text">
            <small class="text-muted">
                @Model.NewsPost.CreatedDate
                @if (Model.NewsPost.EditDate != null)
                {
                    <span>Post edited: @Model.NewsPost.EditDate</span>
                }
            </small>
        </p>
    </div>
</div>

<hr />
<p>Comment count: @Model.Comments.Count</p>
@if (Model.Comments.Any())
{
    foreach (ISMNewsPortal.Models.CommentViewModel comment in Model.Comments)
    {
        <div class="card">
            <div class="card-header">
                <p>@comment.Author</p>
            </div>
            <div class="card-body">
                <p class="card-text">
                    @comment.Text
                </p>
                <p class="card-text">
                    <small class="text-muted">
                        @comment.Date
                    </small>
                </p>
            </div>
            <div class="card-footer">
                @Html.ActionLink("Delete", "DeleteComment", "News", new { @id = comment.Id, @newsPostId = Model.NewsPost.Id }, new { @class = "btn btn-outline-danger" })
            </div>
        </div>
    }
}
<div class="btn-group" role="group">
    @if (Model.Page > 0)
    {
        @Html.ActionLink("Last page", "Details", "News", new { @page = Model.Page - 1, @id = Model.NewsPost.Id }, new { @class = "btn btn-outline-dark" });
    }
    @if (Model.Page > 1 && Model.Pages > 2)
    {
        @Html.ActionLink("First page", "Details", "News", new { @page = 0, @id = Model.NewsPost.Id }, new { @class = "btn btn-outline-dark" });
    }
    @if (Model.Page < Model.Pages - 1)
    {
        @Html.ActionLink("Next page", "Details", "News", new { @page = Model.Page + 1, @id = Model.NewsPost.Id }, new { @class = "btn btn-outline-dark" });
    }
</div>
@Html.Partial("_Comment", new ISMNewsPortal.Models.CommentCreateModel() { PageId = Model.NewsPost.Id })