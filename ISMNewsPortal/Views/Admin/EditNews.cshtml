@model ISMNewsPortal.Models.NewsPostAdminView

@{
    Layout = "~/Views/Shared/_Admin.cshtml";
}
<h4>Edit news post!</h4>
<img id="imageElement" class="post-img edit-img" alt="no image" />

@using (Html.BeginForm())
{

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.EditDate)
        @Html.HiddenFor(model => model.AuthorName)
        @Html.HiddenFor(model => model.AuthorId)
        @Html.HiddenFor(model => model.CreatedDate)

        @Html.AntiForgeryToken()

        <div class="card">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="card-body">
                <div class="form-group">
                    <div class="col-md-12 input-edit">
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "card-title generateCharacterCount", @placeholder = "News post name" } })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger card-title" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-12 input-edit">
                        @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "card-text generateCharacterCount", @placeholder = "News post description" } })
                        @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger card-text" })
                    </div>
                </div>
            </div>
        </div>
        <div class="form-group input-edit">
            @Html.LabelFor(model => model.ImagePath, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-12">
                @Html.EditorFor(model => model.ImagePath, new { htmlAttributes = new { @class = "form-control", @id = "imagePath" } })
                @Html.ValidationMessageFor(model => model.ImagePath, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.PublicationDate, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-12">
                @Html.EditorFor(model => model.PublicationDate, new { htmlAttributes = new { @class = "card-text", @placeholder = "dd/mm/yyyy hh:mm:ss" } })
                @Html.ValidationMessageFor(model => model.PublicationDate, "", new { @class = "text-danger card-text" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.IsVisible, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-12">
                @Html.EditorFor(model => model.IsVisible, new { htmlAttributes = new { @class = "card-text" } })
                @Html.ValidationMessageFor(model => model.IsVisible, "", new { @class = "text-danger card-text" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-outline-dark" />
            </div>
        </div>
    </div>
}
<script src="~/Scripts/imageUpdater.js"></script>
<script src="~/Scripts/generator.js"></script>