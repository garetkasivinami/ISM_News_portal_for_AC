@model ISMNewsPortal.Models.UserSafeModelAdminCollection

@{
    Layout = "~/Views/Shared/_Admin.cshtml";
}
<h1>User list</h1>
@if (Model.UserSafeModels.Any())
{
    foreach (ISMNewsPortal.Models.UserSafeModel userSafeModel in Model.UserSafeModels)
    {
        <hr />
        <div class="news-item">
            <h2>ID: @userSafeModel.Id</h2>
            <p>Username: @userSafeModel.UserName</p>
            <p>Login: @userSafeModel.Login</p>
            <p>About: @userSafeModel.About</p>
            <img src="@userSafeModel.AvatarPath" alt="No image" width="128" height="128" />
            <p>Comments count: @userSafeModel.CommentsCount</p>
            <p>Likes count: @userSafeModel.LikesCount</p>
            @if (Model.AdminAccessLevel > 2)
            {
                @Html.ActionLink("Raise to administrator", "InjectAdmin", "Admin", new { @id = userSafeModel.Id}, new { });
            }
        </div>

    }
}