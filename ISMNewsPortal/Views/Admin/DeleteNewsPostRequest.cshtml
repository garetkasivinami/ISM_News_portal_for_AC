@model ISMNewsPortal.Models.NewsPostAdminView

@{
    Layout = "~/Views/Shared/_Admin.cshtml";
    ViewBag.Title = Language.Language.DeleteNewsPost;
}
<img src="@Model.ImagePath" class="post-img" alt="Post image">

<div class="card">
    <div class="card-body">
        <h5 class="card-title">@Model.Name</h5>
        <p class="card-text">@Html.Raw(Html.Encode(Model.Description).Replace("\n", "<br />"))</p>
        <p class="card-text">
            <small class="text-muted">
                @Model.CreatedDate
                @if (Model.EditDate != null)
                {
                    <span>@Language.Language.PostEdited: @Model.EditDate</span>
                }
            </small>
        </p>
    </div>
</div>
<hr />
@Html.ActionLink(Language.Language.Delete, "DeleteNewsPost", "Admin", new { @id = Model.Id }, new { @class = "btn btn-outline-danger" })